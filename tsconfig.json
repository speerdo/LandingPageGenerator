{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
